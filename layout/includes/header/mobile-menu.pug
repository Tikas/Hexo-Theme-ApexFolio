- let mobileMenuScroll = theme.mobile_menu_scroll.enable ? 'mobile-nav mobile-menu-scroll' : 'mobile-nav'

div(class=mobileMenuScroll)
  div
  .mobile-menu-link-group
    ul.mobile-menu-list
    if theme.mobile_menu
      each value, label in theme.mobile_menu
        if typeof value !== 'object'
          li.mobile-menu-item
            a.mobile-menu-link(href=url_for(trim(value)))=label
  .mobile-menu-footer
