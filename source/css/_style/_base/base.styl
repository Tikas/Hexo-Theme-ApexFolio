:root
  --color-text ($color-text)
  --global-container ($layout-width)
  --nav-height ($nav-height)
  --color-site-bg ($color-site-bg)

::-webkit-scrollbar
  width 6px
  height 6px
::-webkit-scrollbar-thumb
  background rgba(50, 50, 50, 0.3)
  border-radius 8px
  cursor pointer
  &:hover
    background #636C78
::-webkit-scrollbar-track
  background-color transparent

html
  color var(--color-text)
  width 100%
  height 100%
  font-family $fontfamily
  font-size $fontsize-root
  line-height 1.25
  -webkit-text-size-adjust 100%
  text-size-adjust 100%
  overflow-y scroll

body
  display flex
  flex-direction column
  min-height 100vh
  margin 0
  box-sizing border-box
  overflow hidden
  -ms-overflow-style none
  -webkit-font-smoothing antialiased
  scroll-behavior smooth
  background-color var(--color-site-bg)

main
  display block

hr
  box-sizing content-box
  height 0
  overflow visible

pre
  font-family monospace, monospace
  font-size 1em

a
  background-color transparent

abbr[title]
  border-bottom none
  text-decoration underline
  text-decoration underline dotted

b,
strong
  font-weight bolder

code,
kbd,
samp
  font-family monospace, monospace
  font-size 1em

small
  font-size 80%

sub,
sup
  font-size 75%
  line-height 0
  position relative
  vertical-align baseline

sub
  bottom -.25em

sup
  top -.5em

img
  border-style none

button,
input,
optgroup,
select,
textarea
  font-family inherit
  font-size 100%
  line-height 1.15
  margin 0

button,
input
  overflow visible

button,
select
  text-transform none

[type=button],
[type=reset],
[type=submit],
button
  -webkit-appearance button

[type=button]::-moz-focus-inner,
[type=reset]::-moz-focus-inner,
[type=submit]::-moz-focus-inner,
button::-moz-focus-inner
  border-style none
  padding 0

[type=button]:-moz-focusring,
[type=reset]:-moz-focusring,
[type=submit]:-moz-focusring,
button:-moz-focusring
  outline 1px dotted ButtonText

fieldset
  padding .35em .75em .625em

legend
  box-sizing border-box
  color inherit
  display table
  max-width 100%
  padding 0
  white-space normal

progress
  vertical-align baseline

textarea
  overflow auto

[type=checkbox],
[type=radio]
  box-sizing border-box
  padding 0

[type=number]::-webkit-inner-spin-button,
[type=number]::-webkit-outer-spin-button
  height auto

[type=search]
  -webkit-appearance textfield
  outline-offset -2px

[type=search]::-webkit-search-decoration
  -webkit-appearance none

::-webkit-file-upload-button
  -webkit-appearance button
  font inherit

details
  display block

summary
  display list-item

template
  display none

[hidden]
  display none

.container
  max-width var(--global-container)
  width 90%
  margin 0 auto

.nav-height
  padding-top var(--nav-height)

.showcase
  background-color var(--color-site-bg)

.video-16-9-container
  position relative
  width 100%
  padding-top 56.25%
  margin-bottom 6rem

.video-16-9
  position absolute
  top 0
  left 0
  width 100%
  height 100%

#post-content,
#page-content
  padding-bottom 2rem
  & h2
    font-size 2.5rem
    border-top 1px dashed #4259ef22
    padding-top 1.5rem
    margin-top 2rem
  & h3
    font-size 1.75rem
    padding-top 1rem
    margin-top 1.5rem
  & h4
    font-size 1.5rem
    padding-top 0.75rem
    margin-top 1.25rem
  & p
    margin 1.5rem 0
    line-height 1.5
    font-size clamp(1.125rem, 2vw, 1.25rem)
  & img
    display block
    margin auto
    max-width 90%
    max-height 30rem
    border-radius 0.75rem
    object-fit cover
  & li
    padding 4px 2px
