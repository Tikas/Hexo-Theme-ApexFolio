.page-poster-info,
.full-page-info-container
  display flex
  flex-direction column

.full-page-info
  min-height 100vh
  margin-bottom 235vh
  background #F7F8F9
  justify-content column
  align-items center

.page-poster-info,
.full-page-info-container
  justify-content space-between

.full-page-info-container
  height 85vh
  text-align center
  align-items center

.page-poster-title,
.page-info-title,
.page-title
  max-width 72rem
  font-size clamp(3rem, 10vw, 5rem)
  font-weight 700
  line-height 1.1

.page-poster-title,
.page-info-title
  margin 0 0 6rem

.page-title
  margin 4rem auto 6rem

.page-description
  margin 0 auto
  max-width 25rem

.page-poster-img
  width 100%
  border-radius 2rem
  border 1px solid #999
  margin 0 0 6rem
  min-height 50vh
  object-fit cover

.page-discover-scroll
  display flex
  justify-content center

.page-text-alt
  margin 0 auto 6rem

.page-text-span
  display inline-block
  margin 0 1rem
  text-transform uppercase
  font-weight 600

.page-svg-arrow
	transform translateY(6px) rotate(-90deg)
	fill currentColor

.full-page-columns
  position  fixed
  left 0
  top 0
  right 0
  bottom 0
  width 100%
  height 100vh
  background #232425
  min-height  100vh
  z-index -1

.columns
  display flex
  position relative
  width 100%
  height 100%
  gap 2.5vw
  justify-content center
  align-items center
  transform rotate(-25deg)
  will-change transform, opacity

.column-wrap
  display flex
  position relative
  padding 5vh 0 15vh
  flex-direction  column
  will-change transform
  z-index 1
  &:nth-child(even)
    margin-top 20vh

.column
  display block
  position relative
  will-change transform

.column-item
  position relative
  width 25vw
  height 25vw
  margin 0 0 2.5vw 0
  border-radius 4px
  cursor pointer
  will-change transform, filter
  overflow hidden
  z-index 1

.column-item-img
  width 100%
  height 100%
  will-change transform
  object-position 50% 50%
  object-fit cover

@media screen and (max-width: 1200px)
  .column-item
    width 30vh
    min-width 20rem
    height 30vh
    min-height 20rem
  .page-poster-img
    border-radius 1.5rem

@media screen and (max-width: 768px)
  .column-item
    width 25vh
    min-width 17.5rem
    height 25vh
    min-height 17.5rem
  .page-poster-title,
  .page-title,
  .page-poster-img,
  .page-text-alt
    margin-bottom 5rem
  .page-poster-img
    border-radius 1.25rem

@media screen and (max-width: 500px)
  .column-item
    width 20vh
    min-width 15rem
    height 20vh
    min-height 15rem
  .page-poster-title,
  .page-title,
  .page-poster-img,
  .page-text-alt
    margin-bottom 4rem
  .page-poster-img
    border-radius 1rem
