.post_item-info-bg
  background-image linear-gradient(135deg, #fff, rgba(255, 255, 255, .7))

.post_item-info
  display grid
  grid-template-columns 1fr 1fr
  grid-auto-columns 1fr
  gap 0
  align-items start
  box-sizing border-box

.post_item-info-content
  max-width calc(var(--global-container) / 2)
  width 90%
  justify-self end

.post_item-info-title
  font-size clamp(1.5rem, 2vw, 3rem)
  font-weight 600
  line-height 1.05
  letter-spacing 0.01em
  margin-top 0
  margin-bottom 1rem

.post_item-gallery-title
  margin clamp(1rem, 2vw, 3rem) 0
  font-size 1.125rem
  font-weight 600

.post_item-inline-wrapper
  display flex
  flex-wrap wrap

.post_item-definition
  display flex
  margin clamp(1rem, 2vw, 3rem) 0

.post_item-definition-key
  min-width 50%
  padding-right 1rem

.post_item-definition-title
  font-size clamp(2rem, 3vw, 3rem)
  font-weight 500
  line-height 1.3

.post_item-definition-unit
  font-size 1.5rem
  margin 0 0 0 0.625rem

.post_item-definition-title,
.post_item-definition-unit
  display inline-block

.post_item-definition-content
  display block
  min-width 80%
  text-transform uppercase
  font-size 0.75rem
  line-height 1.25
  font-weight 500

.post_item-gallery-wrapper
  width clamp(3.5rem, 4vw, 4rem)
  height clamp(3.5rem, 4vw, 4rem)
  margin-right 0.5vw
  border-radius 1rem
  border 1px solid #333
  cursor pointer
  opacity 0.3
  object-fit cover
  &.active,
  &:hover
    border-radius 0
    opacity 1

.post_item-gallery
  height 100%

.post_item-gallery-container
  display flex
  justify-content flex-end
  align-items center

.post_item-gallery-show
  width 95%
  max-height 75vh
  min-height 35rem
  overflow hidden

.post_item-gallery-showcase
  position relative
  width 100%
  max-height 100%
  object-position 50% 50%
  object-fit cover

.post_item-gallery-showcase
  display none

@media screen and (max-width: 1000px)
  .post_item-info
    grid-template-columns 1fr
  .post_item-info-content
    max-width none
    justify-self center
  .post_item-gallery-show
    width 100%
    max-height 60vh
    min-height 240px
  .post_item-gallery-wrapper
    margin-right 1vw
  .post_item-gallery-title
    margin 1rem 0 0.5rem
