.cards-banner
  padding 7.5rem 0 8.75rem

.cards-top
  display grid
  grid-gap 1.25rem
  gap 1.25rem
  grid-template-columns 2fr 1fr

.cards-box
  display flex
  width 100%
  height 32rem
  flex-direction column
  border-radius 2rem
  overflow hidden
  &.cards-box-right
    justify-content center

.cards-top-text
  padding 0 5% 2rem

.cards-title
  font-weight 700
  font-size 2.5rem
  line-height 1
  letter-spacing 0.3px
  margin-bottom 0.5rem
  &.white
    color white
  &.black
    color black

.cards-description
  margin 0
  font-weight 400
  line-height 1.5rem
  letter-spacing 0.05px
  &.white
    color white
  &.black
    color black

.cards-img-box
  width 100%
  height 100%
  &.cards-img-height
    height 50%

.cards-img,
.cards-img-max-width
  display block
  box-sizing border-box
  margin 0 auto
  width 100%
  height 100%

.cards-img
  object-fit cover

.cards-img-max-width
  padding 1rem
  max-width 20rem
  max-height 100%
  object-fit contain

@media screen and (max-width: 1200px)
  .cards-box
    height 28rem
    border-radius 1.5rem
  .cards-title
    font-size 2rem
    line-height 2.125rem
    letter-spacing 0.2px
  .cards-description
    font-size 0.875rem
    line-height 1.25rem
    letter-spacing 0

@media screen and (max-width: 768px)
  .cards-top
    grid-template-columns 1fr
  .cards-box
    height 24rem
    border-radius 1.25rem
  .cards-top-left-text
    text-align center

@media screen and (max-width: 500px)
  .cards-box
    height 20rem
    border-radius 1rem
  .cards-title
    font-size 1.75rem
    line-height 1.875rem
    letter-spacing 0
  .cards-description
    font-size 0.75rem
    line-height 1rem
    letter-spacing 0
