.section-banner
  display flex
  position relative
  width 100vw
  min-height 60rem
  flex-direction column
  align-items center
  padding-top 8rem
  height fit-content
  overflow hidden

.section-banner-info
  display flex
  flex-direction column
  align-items center

.section-badge
  font-size 0.875rem
  font-weight bold
  color #52cc64
  text-transform uppercase

.section-title
  font-size 3.5rem
  font-weight bold
  text-align center
  margin 0.75rem 0 0
  &.white
    color white
  &.black
    color black

.section-banner-description
  display flex
  flex-direction column
  align-items center
  opacity 0.8
  margin 1.25rem 0

.description
  display block
  font-size 1rem
  line-height 1.25rem
  text-align center
  &.white
    color white
  &.black
    color black

.section-banner-pic
  display flex
  height 30rem
  margin-top 1.5rem
  bottom 8rem
  justify-content center

.section-banner-img
  width 100%
  max-width 75rem
  margin auto

@media screen and (max-width: 1200px)
  .section-badge
    font-size 0.75rem
  .section-title
    font-size 3rem
  .description
    font-size 0.875rem
    line-height 1.2rem
  .section-banner-pic
    height 25rem
  .section-banner
    min-height 53.75rem

@media screen and (max-width: 1000px)
  .section-badge
    font-size 0.625rem
  .section-title
    font-size 2.5rem
  .description
    font-size 0.75rem
    line-height 1.15rem
  .section-banner-pic
    height 18.75rem
  .section-banner
    min-height 45rem

@media screen and (max-width: 768px)
  .section-badge
    font-size 0.5rem
  .section-title
    font-size 2rem
  .description
    font-size 0.625rem
    line-height 1.1rem
  .section-banner-pic
    height 14rem
  .section-banner
    min-height 41.25rem

@media screen and (max-width: 500px)
  .section-badge
    font-size 0.375rem
  .section-title
    font-size 1.5rem
  .description
    font-size 0.5rem
    line-height 1rem
  .section-banner-pic
    height 12rem
  .section-banner
    min-height 38.75rem
